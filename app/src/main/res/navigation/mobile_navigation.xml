<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">

    <!-- Home Fragment -->
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.prm392app.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">

        <!-- ✅ Action: Home -> Internship Details -->
        <action
            android:id="@+id/action_home_to_internship_details"
            app:destination="@id/internshipDetailsFragment"
            app:popUpTo="@id/navigation_home"
            app:launchSingleTop="true" >
            <argument
                android:name="internship_id"
                app:argType="string" />
        </action>
    </fragment>

    <!-- Dashboard Fragment -->
    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.prm392app.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <!-- Notifications Fragment -->
    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.prm392app.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <!-- User List Fragment -->
    <fragment
        android:id="@+id/navigation_user_list"
        android:name="com.example.prm392app.ui.chat.UserListFragment"
        android:label="User List"
        tools:layout="@layout/fragment_user_list">

        <!-- Action: User List -> Chat -->
        <action
            android:id="@+id/action_userList_to_chat"
            app:destination="@id/navigation_chat" />
    </fragment>

    <!-- Chat Fragment -->
    <fragment
        android:id="@+id/navigation_chat"
        android:name="com.example.prm392app.ui.chat.ChatFragment"
        android:label="@string/title_chat"
        tools:layout="@layout/fragment_chat" />

    <!-- Internship Details Fragment -->
    <fragment
        android:id="@+id/internshipDetailsFragment"
        android:name="com.example.prm392app.ui.internships.InternshipDetailsFragment"
        android:label="Chi tiết thực tập"
        tools:layout="@layout/fragment_internship_details">

        <!-- Argument nhận internship_id -->
        <argument
            android:name="internship_id"
            app:argType="string" />
    </fragment>

</navigation>
