        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PRM392app"
        tools:targetApi="31">
        <activity
            android:name=".uiRecruiters.notifications.NotificationsRecruiterFragment"
            android:exported="false" />
        <activity
            android:name=".uiRecruiters.chat.ChatRecruiterFragment"
            android:exported="false" />
        <activity
            android:name=".uiRecruiters.dashboard.InterviewScheduleFragment"
            android:exported="false" />
        <activity
            android:name=".uiRecruiters.home.HomeRecruiterFragment"
            android:exported="false" />
        <activity
            android:name=".SignInActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".StudentActivity"
            android:exported="false" />
        <activity
